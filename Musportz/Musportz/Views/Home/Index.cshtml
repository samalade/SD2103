@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/musportz Logo.png" alt="MUSPORTZ.COM" height="500" width="500" class="img-responsive"  />
            <div class="carousel-caption" role="option">
                <p>
                    Musportz.com - online portal for music and sports lovers.
                   <a asp-area="" asp-controller="Home" asp-action="About" class="btn btn-default" >Learn More</a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/musportz Logo.png" alt="Music blog" height="500" width="500" class="img-responsive"  />
            <div class="carousel-caption" role="option">
                <p>
                    There are powerful new features in Musportz like the Music center that allows you to talk about your latest jams.
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-default">Coming Soon</a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/musportz Logo.png" alt="Sports Blog" height="500" width="500" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    The Sportcenter page is a all new feature coming to Musportz.com that allows you to create ongoing conversations happening in the Sport world.
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-default">Coming Soon</a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

